<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:gravity="center">

    <Button android:id="@+id/btn_dowork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_dowork"

            />
    <Button
            android:id="@+id/btn_dowork_constrain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_dowork_constrain"
            android:layout_below="@+id/btn_dowork"
            />

    <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_cancel"
            android:layout_below="@+id/btn_dowork_constrain"
            />

    <Button
            android:id="@+id/btn_cancel_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_btn_cancel_all"
            android:layout_below="@+id/btn_cancel"
            />

</RelativeLayout>